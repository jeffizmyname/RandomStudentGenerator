<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="RandomStudentGenerator.CustomControls.HappyNumber"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentView.Resources>
        <StyleSheet Source="/Styles/HappyNum.css" />
    </ContentView.Resources>
    <Frame StyleClass="box">
        <FlexLayout StyleClass="happyNumberBox">
            <Label
                x:Name="happyNumber"
                Text="happy number" />
            <StackLayout>
                <Label x:Name="happyNumberinfo" Text="Todays Happy Number" />
            </StackLayout>
        </FlexLayout>
    </Frame>
</ContentView>
